<script>

    function increaseQuantity(productId)
    {
        token = $('input[name=__RequestVerificationToken]').val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("IncreaseCartItem","Cart")",
            dataType: "json",
            data: 
            {
                __RequestVerificationToken: token,
                productId : productId
            },
            success: function(result){
                @* console.log(result); *@
                $(`#quantityBox-${productId}`).text(result.quantity);
                $(`#priceBox-${productId}`).text(result.itemPrice*result.quantity);
                $("#total-price-box").text(result.cartTotalPrice);
                if($(`#btnDecrease-${productId}`).hasClass("disabled"))
                {
                    $(`#btnDecrease-${productId}`).removeClass("disabled")
                }
            },
            error: function(req,status,error){
                console.log(status);
            }
        })
    };

    function decreaseQuantity(productId)
    {
        token = $('input[name=__RequestVerificationToken]').val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DecreaseCartItem","Cart")",
            dataType: "json",
            data: 
            {
                __RequestVerificationToken: token,
                productId : productId
            },
            success: function(result){
                @* console.log(result); *@
                $(`#quantityBox-${productId}`).text(result.quantity);
                $(`#priceBox-${productId}`).text(result.itemPrice*result.quantity);
                $(`#total-price-box`).text(result.cartTotalPrice);
                if($(`#quantityBox-${productId}`).text() == 1)
                {                    
                    $(`#btnDecrease-${productId}`).addClass("disabled")
                }
            },
            error: function(req,status,error){
                console.log(status);
            }
        })
    };

</script>

