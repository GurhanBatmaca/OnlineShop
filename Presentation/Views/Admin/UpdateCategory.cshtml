@model CategoryModel

@{
    Layout = "_Layout-Admin";
    ViewData["Title"] = "Admin/Kategori güncelle";
}

<div class="row my-3">
    <div class="col-12">
        <h1 class="h3">Kategori Güncelle</h1>
        <hr>
    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="UpdateCategory" method="post" class="mb-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id">     
                <div class="form-group row mb-3">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>   
                <div class="form-group row my-2">
                    <div class="col-sm-10 ">
                        <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                    </div>
                </div>          
        </form>

        <div>
            <h6><span class="border-bottom">Mevcut kategoriler</span></h6>
            <ul class="list-group list-group-flush"></ul>
                @foreach (var item in (List<CategoryViewModel>)ViewBag.Categories)
                {                   
                    <li class="list-group-item">@item.Name</li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts
{
  @await Html.PartialAsync("_ValidationScriptsPartial")
}