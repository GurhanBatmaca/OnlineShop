@model PageInfoModel

@if(Model.PaginationType == "HomePageProducts")
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled":"")">
                <a class="page-link" href="/?sayfa=@(Model.CurrentPage-1)"><i class="fa-solid fa-angle-left"></i> </a>
            </li>  
            @if(Model.CurrentPage == @Model!.TotalPages() && @Model!.TotalPages() > 4)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li> 
            } 
            @for(var i=0; i< @Model!.TotalPages(); i++)
            {                   
                @if(Model.CurrentPage == i+1 || Model.CurrentPage == i || Model.CurrentPage == i+2) 
                {
                    <li class="page-item @(Model.CurrentPage == i+1 ? "active":"")">
                        <a class="page-link" href="/?sayfa=@(i+1)">@(i+1)</a>
                    </li>
                }
            }
            @if(Model.CurrentPage != Model!.TotalPages() && Model.CurrentPage != Model!.TotalPages() -1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" >...</a>
                </li> 
            }
           
            <li class="page-item @(Model.CurrentPage == @Model!.TotalPages() ? "disabled":"")">
                <a class="page-link" href="/?sayfa=@(Model.CurrentPage+1)"> <i class="fa-solid fa-angle-right"></i></a>
            </li>
            <li class="page-item @(Model.CurrentPage == @Model!.TotalPages() ? "disabled":"")">
                <a class="page-link" href="/?sayfa=@Model!.TotalPages()">/ @Model!.TotalPages()</a>
            </li> 
        </ul>
    </nav>
}

