<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" 
    asp-append-version="true" />
    @await RenderSectionAsync("Css", required: false)
</head>
<body>
    <header>
        @await Html.PartialAsync("_navbar-Admin")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
           
            @if(@TempData["infoMessage"] != null)
            {
                @await Html.PartialAsync("_infoMessage",@TempData.Get<MessageModel>("infoMessage"))
            }
        
            @if(@TempData["toastMessage"] != null)
            {
                @await Html.PartialAsync("_toastMessage",@TempData.Get<MessageModel>("toastMessage"))
            }
            
            @if(@TempData["cartMessage"] != null)
            {
                @await Html.PartialAsync("_cartMessage",@TempData.Get<MessageModel>("cartMessage"))
            }

            @RenderBody()

        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
