@model ProductDetailsModel

@{
    ViewData["Title"] = "Ürün Detayı";
}

@section Css 
{
    <link rel="stylesheet" href="~/css/product-details.css">
}

<div class="row">
    <h1 class="h3">Ürün Detayı</h1>
    <hr>
</div>

<div class="">
    <div class="row">
        <div class="col-md-6">
            <div class="product-img">
                <img src="~/images/@Model.Product.ImageUrl" alt="urun-resmi">
            </div>
        </div>
        <div class="col-md-6">
            <div class=""><h3>@Model.Product.Name</h3></div>
            <div class=""><h4>@Model.Product.Price.ToString("c") TL</h4> </div>
            <div class="d-flex">
                @foreach(var category in @Model.Categories)
                {
                    <a class="btn btn-outline" href="/urunler/@category.Url">@category.Name</a>
                }
            </div>
            <div class="d-flex mt-auto">
                <input type="number" name="" id="">
                <button class="btn">Ekle</button>
            </div>
        </div>
        <div>
            <p>@Model.Product.Description</p>

        </div>
    </div>
</div>

