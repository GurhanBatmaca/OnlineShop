@model LoginModel

@{
  ViewData["Title"] = "Üyelik girişi";
}

@section Css
{
  <link rel="stylesheet" href="~/css/login.css">
}

<div class="form-signin w-100 m-auto">

  <form method="post">
    <div class="d-flex justify-content-between px-1">
      <h1 class="h3 mb-3 fw-normal">Giriş yap</h1>
      <i class="fa-solid fa-user-lock fa-2x"></i>
    </div>
    
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-floating mb-1">
      <input asp-for="Email" class="form-control" placeholder="E-Posta">
      <label asp-for="Email"></label>
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
      <input asp-for="Password" class="form-control"  placeholder="Şifre">
      <label asp-for="Password"></label>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check text-start my-3">
      <input asp-for="RememberMe" class="form-check-input" type="checkbox" checked>
      <label asp-for="RememberMe" class="form-check-label me-2" >
      </label>
      <a href="/">Şifremi Unuttum</a>
    </div>

    <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
  </form>

</div>

@section Scripts
{
  @await Html.PartialAsync("_ValidationScriptsPartial")
}