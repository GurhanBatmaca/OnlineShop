@model RegisterModel

@section Css
{
  <link rel="stylesheet" href="~/css/register.css">
}

<div class="form-signin w-100 m-auto">

  <form method="post">
    <div class="d-flex justify-content-between px-1">
      <h1 class="h3 mb-3 fw-normal">Kayıt ol</h1>
      <i class="fa-solid fa-user-tag fa-2x"></i>
    </div>
    
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-floating mb-1">
      <input asp-for="FirsName" class="form-control">
      <label asp-for="FirsName"></label>
      <span asp-validation-for="FirsName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
      <input asp-for="LastName" class="form-control">
      <label asp-for="LastName"></label>
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-1">
      <input asp-for="Email" class="form-control">
      <label asp-for="Email"></label>
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
      <input asp-for="Password" class="form-control">
      <label asp-for="Password"></label>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
      <input asp-for="RePassword" class="form-control">
      <label asp-for="RePassword"></label>
      <span asp-validation-for="RePassword" class="text-danger"></span>
    </div>

    <button class="btn btn-primary w-100 py-2" type="submit">Kayıt ol</button>
  </form>

</div>

@section Scripts
{
  @await Html.PartialAsync("_ValidationScriptsPartial")
}